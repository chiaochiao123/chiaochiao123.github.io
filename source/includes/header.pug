.container
  .row
    .col-sm-4.col-md-4.col-xl-6
      include ./logo.pug
      img.logo-img.ml-3(src='/public/img/logo.gif', alt='Logo')
    .col-sm-8.col-md-8.col-xl-6
      // hide on screens smaller than xl 1200px
      img.banner.d-none.d-xl-block(src='/public/img/header_1200.png',alt='banner')
      // hide on screens wider than xl 1200px
      img.banner.d-xl-none(src='/public/img/header_992.png',alt='banner')